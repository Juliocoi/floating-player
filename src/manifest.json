{
    "manifest_version": 2,
    "name": "Floating Player: YouTube, Twitch.tv, etc.",
    "version": "2.0.13",

    "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",

    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/16x16.png",
        "48": "img/48x48.png",
        "128": "img/128x128.png"
    },

    "browser_action": {
        "default_icon": "img/16x16.png"
    },

    "background": {
        "page": "background.html"
    },

    "options_page": "options.html",
    "permissions": ["contextMenus", "activeTab", "*://www.youtube.com/*"],

    "web_accessible_resources": [
        "youtube.html"
    ]
}
